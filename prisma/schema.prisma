datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model AuditLog {
  id        Int      @id @default(autoincrement())
  userId    Int
  action    String
  details   String?
  ipAddress String?
  timestamp DateTime @default(now())
}

model Resource {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model ULB {
  ulb_id    Int    @id @map("id") // Use id from ULBMaster table
  name      String
  latitude  Float  @default(0.0)
  longitude Float  @default(0.0)

  // Relation field
  ulbMaster ULBMaster @relation(fields: [ulb_id], references: [id])
}

model ULBMaster {
  id        Int    @id @default(autoincrement())
  name      String
  latitude  Float
  longitude Float

  // Define the relations
  ulbs ULB[]
}

model Scheme_info {
  scheme_id        String   @id @unique
  project_cost     Decimal
  scheme_name      String
  sector           String
  grant_type       String
  city_type        String
  date_of_approved DateTime
  ulb              String
  created_at       DateTime @default(now())

  // New fields with default values
  project_completion_status        String  @default("no")
  tender_floated                   String  @default("no")
  financial_progress               Decimal @default(0.0)
  financial_progress_in_percentage Int     @default(0)
  status                           Int     @default(0)
  approved_project_cost            Decimal @default(0.0)
}
