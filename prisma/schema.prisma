datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model AuditLog {
  id        Int      @id @default(autoincrement())
  userId    Int
  action    String
  details   String?
  ipAddress String?
  timestamp DateTime @default(now())
}

model Resource {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model ULB {
  id        Int    @id @default(autoincrement())
  ulb_name  String
  longitude Float
  latitude  Float
}

model Scheme_info {
  scheme_id        String    @id @unique
  project_cost     Decimal
  scheme_name      String
  sector           String
  grant_type       String
  city_type        String
  date_of_approval DateTime?
  ulb              String
  created_at       DateTime  @default(now())

  // New fields with default values
  project_completion_status               String?
  tender_floated                          String?
  financial_progress                      Decimal?
  financial_progress_in_percentage        Int?
  project_completion_status_in_percentage Int?
  approved_project_cost                   Decimal?
}
